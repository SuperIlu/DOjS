function(jas_get_includes_from_targets)
	set(var_name ${ARGV0})
	set(target_list ${ARGV})
	list(REMOVE_AT target_list 0)
	set(include_dirs)
	foreach(t ${target_list})
		if (TARGET ${t})
			message("target: ${t}")
			get_target_property(dirs ${t} INTERFACE_INCLUDE_DIRECTORIES)
			if (dirs)
				message("${t}: adding include directory ${dirs}")
				set(include_dirs ${include_dirs} ${dirs})
			endif()
		endif()
	endforeach()
	set(${var_name} ${include_dirs} PARENT_SCOPE)
endfunction()
